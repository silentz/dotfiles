# on system startup only
exec --no-startup-id xrandr --output eDP-1 --mode 1920x1080
exec --no-startup-id dbus-launch dunst --config ~/.config/dunst/dunstrc

# on i3 restart and systrem startup
exec_always --no-startup-id ~/bin/system/system_env_wrapper.sh system_keyboard_lang.sh
exec_always --no-startup-id ~/bin/system/system_env_wrapper.sh system_keyboard_rate.sh
exec_always --no-startup-id ~/bin/system/system_env_wrapper.sh system_touchpad.sh
exec_always --no-startup-id ~/bin/system/system_env_wrapper.sh system_statusbar.sh
exec_always --no-startup-id ~/bin/system/system_env_wrapper.sh system_wallpapers.sh
exec_always --no-startup-id ~/bin/system/system_env_wrapper.sh system_setup_dpms.sh
exec_always --no-startup-id ~/bin/system/system_env_wrapper.sh system_start_xss_lock.sh
