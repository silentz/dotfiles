bindsym $mod+Return           exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_terminal.sh
bindsym $mod+b                exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_browser.sh
bindsym $mod+n                exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_file_manager.sh
bindsym $mod+l                exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_lock_screen.sh

bindsym $mod+Prior            exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_move_workspace.sh left
bindsym $mod+Next             exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_move_workspace.sh right
bindsym $mod+Shift+Prior      exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_swap_workspace.sh left
bindsym $mod+Shift+Next       exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_swap_workspace.sh right

bindsym $mod+Shift+e          exec --no-startup-id ~/.config/rofi/run/powermenu.sh
bindsym $mod+d                exec --no-startup-id ~/.config/rofi/run/drun.sh
bindsym $mod+u                exec --no-startup-id ~/.config/rofi/run/window.sh

bindsym XF86AudioMute         exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_volume_mute_toggle.sh
bindsym XF86AudioRaiseVolume  exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_volume_up.sh
bindsym XF86AudioLowerVolume  exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_volume_down.sh
bindsym XF86AudioMicMute      exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_microphone_toggle.sh

bindsym XF86MonBrightnessUp   exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_brightness_up.sh
bindsym XF86MonBrightnessDown exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_brightness_down.sh
bindsym F12                   exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_redshift_on.sh
bindsym Shift+F12             exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_redshift_off.sh

bindsym $mod+Print            exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_screenshot.sh
bindsym Shift+Control+Print   exec --no-startup-id ~/bin/system/system_env_wrapper.sh system_screenshot_clipboard.sh
