# i3 has support for both X core fonts and
# FreeType fonts (through Pango) to render window titles
font pango:Ubuntu Nerd Font 11

# use mouse+$mod to drag floating windows
floating_modifier $mod

# i3 tiling mode (default | stacking | tabbed)
workspace_layout default

# default orientation for tiling mode (horizontal|vertical|auto)
default_orientation horizontal

# border settings
default_border pixel 2
default_floating_border normal

# title alignment
title_align left

# Focus after Tapping
focus_follows_mouse no

# set inner/outer gaps
gaps inner 8
gaps outer 0

# define color vars
set $bg-color          #202020
set $focused-color     #909090
set $unfocused-color   #202020
set $urgent-bg-color   #a03000
set $text-color        #d0d0d0

# define colors for windows
# <colorclass>          <border>           <background>       <text>         <indicator>         <child_border>
client.focused          $bg-color          $bg-color          $text-color    $focused-color      $focused-color
client.unfocused        $bg-color          $bg-color          $text-color    $unfocused-color    $unfocused-color
client.focused_inactive $bg-color          $bg-color          $text-color    $unfocused-color    $unfocused-color
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color    $urgent-bg-color    $unfocused-color
