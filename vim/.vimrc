" Don't create a backup file
set nobackup

" Allows vim to access the system clipboard
set clipboard=unnamedplus

" More space in the Neovim command line for displaying messages
set cmdheight=1

" So that `` is visible in markdown files
set conceallevel=0

" The encoding written to a file
set fileencoding=utf-8

" Highlight all matches on previous search pattern
set hlsearch

" Ignore case in search patterns
set ignorecase

" Allow the mouse to be used in Neovim
set mouse=a

" We don't need to see things like -- INSERT -- anymore
set noshowmode

" Smart case
set smartcase

" Make indenting smarter again
set smartindent

" Force all horizontal splits to go below current window
set splitbelow

" Force all vertical splits to go to the right of current window
set splitright

" Don't create a swapfile
set noswapfile

" Set term GUI colors (most terminals support this)
set termguicolors

" Time to wait for a mapped sequence to complete (in milliseconds)
set timeoutlen=300

" Convert tabs to spaces
set expandtab

" The number of spaces inserted for each indentation
set shiftwidth=4

" Insert so much spaces for a tab
set tabstop=4

" Set numbered lines
set number

" Don't set relative numbered lines
set norelativenumber

" Set number column width to 4 (default)
set numberwidth=4

" If file is being edited by another program, don't allow editing
set nowritebackup

" Enable persistent undo
set undofile

" Display lines as one long line
set wrap

" Don't split words when wrapping lines
set linebreak
