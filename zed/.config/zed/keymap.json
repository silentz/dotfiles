[
    {
        "bindings": {
            "ctrl-left": ["workspace::ActivatePaneInDirection", "Left"],
            "ctrl-right": ["workspace::ActivatePaneInDirection", "Right"],
            "ctrl-up": ["workspace::ActivatePaneInDirection", "Up"],
            "ctrl-down": ["workspace::ActivatePaneInDirection", "Down"],
            "ctrl-\\": "terminal_panel::ToggleFocus",
            "ctrl-enter": "workspace::NewTerminal",
            "ctrl-t": "workspace::NewFile",
            "ctrl-w": "pane::CloseActiveItem",
            "ctrl-s": "editor::ShowCompletions",
            "ctrl-;": null
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "ctrl-.": "editor::ToggleCodeActions",
            "ctrl-x": "editor::ToggleCodeActions",
            "ctrl-r": "editor::Rename",
            "ctrl-:": "editor::ToggleInlayHints"
        }
    },
    {
        "context": "Prompt",
        "bindings": {
            "left": "menu::SelectPrev",
            "down": "menu::SelectPrev",
            "right": "menu::SelectNext",
            "up": "menu::SelectNext"
        }
    },
    {
        "context": "ProjectPanel && not_editing",
        "bindings": {
            "r": "project_panel::Rename",
            "d": "project_panel::Delete",
            "a": "project_panel::NewFile",
            "A": "project_panel::NewDirectory",
            "p": "project_panel::Paste",
            "x": "project_panel::Cut",
            "y": "project_panel::Copy"
        }
    },
    {
        "context": "vim_mode == normal",
        "bindings": {
            "g x": "editor::FindAllReferences",
            "g h": "editor::OpenExcerpts",
            "ctrl-shift-v": "vim::Paste"
        }
    },
    {
        "context": "vim_mode == insert",
        "bindings": {
            "ctrl-shift-v": "editor::Paste"
        }
    }
]
